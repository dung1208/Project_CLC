<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="/images/logo.png">
    <link rel="stylesheet" href="/stylesheets/header-manager.css">
    <link rel="stylesheet" href="/stylesheets/screen-cashier.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tarekraafat/autocomplete.js@7.2.0/dist/css/autoComplete.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@tarekraafat/autocomplete.js@7.2.0/dist/js/autoComplete.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <title>Thêm mới đơn nhập hàng</title>

    <!-- Custom styles for this page -->
    <link href="/stylesheets/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>

<body>
    <% include ../layout/header-manager %>

    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>
    <div class="row" id="content-header">
        <div class="col-lg-12">
            <div class="pull-left">
                <h1 ng-bind="$root.title" class="ng-binding">Thêm mới Phiếu nhập hàng</h1>
            </div>
            <div class="pull-right hidden-xs">

            </div>
        </div>
    </div>
    <div class="row searchpanel">
        <div class="form-group col-md-5" style="margin-bottom:5px;">
            <form name="searchForm" class="ng-pristine ng-valid">
                <div class = "input-search">
                    <!-- input for productsearch -->
                    <input id="autoComplete" type="text" tabindex="1">
                </div>
            </form>
        </div>
        <div class="form-group col-md-7" style="margin-bottom:1px;">
            <button class="btn btn-primary btn-xs ng-binding" type="button">
                <i class="fa fa-plus-circle"></i>
                <a class="btn-primary" href="/product/add">HÀNG HÓA</a>
            </button>

        </div>
    </div>
    <div class="content">
        <div class="table-product">
            <table class="table table-striped table-listProducts">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>MÃ</th>
                        <th>TÊN HÀNG HOÁ</th>
                        <th class="origin-price">GIÁ NHẬP</th>
                        <th class="column-center">SL</th>
                        <th class="total-price">THÀNH TIỀN</th>
                        <th class="sell-price">GIÁ BÁN MỚI</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <div class="bill">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#information">Thông tin</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#details">Chi tiết</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div id="information" class="container tab-pane active"><br>
                    <div class="input-group">
                        <input type="text" class="form-control input-searchClient" placeholder="Tìm khách hàng">
                        <span class="icon-searchInput"><i class="fas fa-search"></i></span>
                        <span class="icon-searchInput"><i class="fas fa-plus"></i></span>
                    </div>
                    <div class="icon-guest">
                        <a href="javasxript:void(0)"><i class="fas fa-times"></i> Khách lẻ</a>
                    </div>
                    <div>
                        <input id="input-datetime" />
                        <script>
                            $('#input-datetime').datetimepicker({
                                uiLibrary: 'bootstrap4',
                                modal: true,
                                footer: true
                            });
                        </script>
                    </div>
                    <table class="table table-details">
                        <tbody>
                            <tr>
                                <td class="text-left"> <strong>Tổng số lượng</strong></td>
                                <td class="text-right"> <span>0</span></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Tổng thành tiền</strong></td>
                                <td class="text-right"><span>0</span></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Chiết khấu</strong></td>
                                <td class="text-right">
                                    <div>
                                        <a href="javascript:void(0)">
                                            <i class="fas fa-gift"></i>
                                        </a>
                                        <input type="text" class="input-textRight">
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Tổng cộng</strong></td>
                                <td class="text-right"><span>0</span></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Tiền khách trả</strong></td>
                                <td class="text-right">
                                    <div>
                                        <a href="javascript:void(0)">
                                            <i class="far fa-copy"></i>
                                        </a>
                                        <input type="text" class="input-textRight">
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Tiền thừa</strong></td>
                                <td class="text-right"><span>0</span></td>
                            </tr>

                        </tbody>
                    </table>
                    <div class="btn-action">
                        <button class="btn-print btn-warning"><i class="fas fa-print"></i></button>
                        <button class="btn-submit btn-danger">Hoàn thành</button>
                    </div>
                </div>
                <div id="details" class="container tab-pane fade"><br>
                    <div class="form-group">
                        <label for="#"> Mã đơn hàng</label>
                        <input type="text" class="form-control" placeholder="Tự động tạo mã">
                    </div>
                    <div class="form-group">
                        <label for="#"> Người bán</label>
                        <input type="text" class="form-control" placeholder="Admin">
                    </div>
                    <div class="form-group">
                        <label for="#"> Ghi chú</label>
                        <textarea type="text" class="form-control"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
<script src="/javascripts/header-manager.js"></script>
<script src="/javascripts/order-stock.js"></script>

<!-- Bootstrap core JavaScript-->
<script src="/javascripts/jquery/jquery.min.js"></script>
<!--<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>-->

<!-- Core plugin JavaScript-->
<script src="javascripts/jquery-easing/jquery.easing.min.js"></script>

<!-- Page level plugins -->
<script src="javascripts/datatables/jquery.dataTables.min.js"></script>
<script src="javascripts/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="javascripts/demo/datatables-demo.js"></script>

</html>