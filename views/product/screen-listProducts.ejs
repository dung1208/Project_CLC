                    <a class="dropdown-item" href="#"><i class="fas fa-user"></i> Thông tin tài khoản</a>
                    <a class="dropdown-item" href="#"><i class="fas fa-power-off"></i> Đăng xuất</a>
                </div>
            </div>
        </div>
    </div>
    <div class="content-page">
        <div class="filter">
            <div class="panel-filter">
                <h2 class="panel-filter-title"><i class="fas fa-th-list"></i> TÌM KIẾM</h2>
                <div class="panel-filter-body">
                    <div class="form-group">
                        <input type="text" class="input-filter form-control" placeholder="Mã, Tên">
                    </div>
                    <div class="form-group">
                        <form action="#">
                            <div class="input-group">
                                <input type="text" placeholder="Nhà cung cấp" class="form-control input-filter">
                                <i class="fas fa-search icon-search-ncc"></i>
                            </div>
                            <div class="icon-undefinded">
                                <a href="javascript:void(0)"><i class="fas fa-times"></i><span>Không xác định</span></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="panel-filter">
                <h2 class="panel-filter-title"><i class="fas fa-th-list"></i> LỌC THEO NHÓM</h2>
                <div class="btn-add-group" data-toggle="modal" data-target="#modal-add-group"><i
                        class="fas fa-plus-circle"></i>
                </div>
                <!-- The Modal -->
                <div class="modal fade" id="modal-add-group">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Thêm nhóm mới</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body">
                                <div>
                                    <h5>Tên nhóm</h5>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="select-group">Nhóm cha</label>
                                    <select class="form-control" id="select-group">
                                        <option>Thuốc lá</option>
                                        <option>Nước ngọt</option>
                                        <option>Mỹ phẩm</option>
                                        <option>Bánh kẹo</option>
                                        <option>Văn phòng phẩm</option>

                                    </select>
                                </div>
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-warning" data-dismiss="modal">Thoát</button>
                                <button type="button" class="btn btn-primary">Lưu</button>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="panel-filter-body">
                    <ul>
                        <li><a href="javascript:void(0)"> Tất cả</a></li>
                        <li><a href="javascript:void(0)"> Thuốc lá</a></li>
                        <li><a href="javascript:void(0)"> Nước ngọt</a></li>
                        <li><a href="javascript:void(0)"> Mỹ phẩm</a></li>
                        <li><a href="javascript:void(0)"> Kẹo bánh</a></li>
                        <li><a href="javascript:void(0)"> Văn phòng phẩm</a></li>
                    </ul>
                </div>
            </div>
            <div class="panel-filter">
                <h2 class="panel-filter-title"><i class="fas fa-th-list"></i> LỌC THEO TỒN KHO</h2>
                <div class="panel-filter-body">
                    <div class="form-group">
                        <div class="radio">
                            <input type="radio" name="optionRadios" id="optionRadios0">
                            <label for="optionRadios0">Không lọc</label>
                        </div>
                        <div class="radio">
                            <input type="radio" name="optionRadios" id="optionRadios1">
                            <label for="optionRadios1">Còn hàng</label>
                        </div>
                        <div class="radio">
                            <input type="radio" name="optionRadios" id="optionRadios2">
                            <label for="optionRadios2">Hết hàng</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-products">
            <div class="header-table-products">
                <h1>DANH SÁCH HÀNG HOÁ</h1>
                <div class="pull-right">
                    <button type="button" class="btn btn-primary" id="add-newProduct" ><i class="fas fa-plus-circle"></i>
<!--                        <a class="btn-primary" href="/product/add">THÊM MỚI HÀNG HOÁ</a>-->
                        THÊM MỚI HÀNG HOÁ
                    </button>
                    <button type="button" class="btn btn-primary"><i class="fas fa-file-excel"></i> XUẤT RA
                        FILE</button>
                    <button type="button" class="btn btn-primary"><i class="fas fa-cloud-upload-alt"></i>
                        IMPORT</button>
                </div>
            </div>
            <div class="list-products">
                <table class="table table-hover">
                    <thead>
                        <tr class="title-table-products">
                            <th class="blank-col"></th>
                            <th class="code-product-col">Mã hàng hoá</th>
                            <th class="name-product-col">Tên hàng hoá</th>
                            <th class="price-product-col">Giá bán</th>
                            <th class="cost-product-col">Giá vốn</th>
                            <th class="inventory-col">Tồn kho</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i< data.length; i++) { %>
                            <tr element-product>
                                <th scope="row"><%= (i+1) %></th>
                                <td>
                                    <div class="img-product"></div>
                                    <div class="code-product"><%= data[i].Product_id%></div>
                                </td>
                                <td class="name-product"><%= data[i].Product_name%></td>
                                <td class="price-product"><%= data[i].Product_small_unit_price%></td>
                                <td class="cost-product"><%= data[i].Product_original_price%></td>
                                <td class="inventory"></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
<script src="/javascripts/header-manager.js"></script>
<script src="/javascripts/screen-listProduct.js"></script>

</html>